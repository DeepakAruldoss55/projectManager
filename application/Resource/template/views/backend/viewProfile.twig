{% load static %}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Project Management</title>
		<link rel="shortcut icon" href="{% static 'media/images/logo.png' %}" type="image/x-icon">
		<link href="{% static 'bootstrap/4.5.3/css/bootstrap.min.css' %}" rel="stylesheet">
		<link href="{% static 'css/dashboard.css' %}" rel="stylesheet">
		<link href="{% static 'css/profile.css' %}" rel="stylesheet">
		<script src="{% static 'jquery/3.5.1/jquery-slim.min.js' %}"></script>
		<script src="{% static 'lib/cdn/popper.min.js' %}"></script>
		<script src="{% static 'bootstrap/4.5.3/js/bootstrap.min.js' %}"></script>
		<link rel="stylesheet" href="{% static 'lib/cdn/font/node_modules/bootstrap-icons/font/bootstrap-icons.css' %}">
	</head>
	<body>
		<div class="d-flex">
			<nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
				{% include 'navigation.twig' %}
			</nav>
			<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
				<div class="d-flex justify-content-between align-items-center mt-4">
					<h4 class="users-profile-header">View Profile</h4>
				</div>
				<div class="profile-details">
					<p>
						<strong>First Name:</strong>
						{{ userData.firstName }}</p>
					<p>
						<strong>Last Name:</strong>
						{{ userData.lastName }}</p>
					<p>
						<strong>Employee ID:</strong>
						{{ userData.empID }}</p>
					<p>
						<strong>Role:</strong>
						{{ userData.roleID.snippet }}</p>
					<p>
						<strong>Status:</strong>
						{{ userData.activate|yesno:"Active,Inactive" }}</p>
				</div>
			</main>
		</div>
	</body>
</html>
