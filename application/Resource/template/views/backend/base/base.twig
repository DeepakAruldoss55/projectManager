{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Project Management{% endblock %}</title>
    <link rel="shortcut icon" href="{% static 'media/images/logo.png' %}" type="image/x-icon">
    <link href="{% static 'bootstrap/4.5.3/css/bootstrap.min.css' %}" rel="stylesheet">
    <link href="{% static 'css/base.css' %}" rel="stylesheet">
    <script src="{% static 'jquery/3.5.1/jquery-slim.min.js' %}"></script>
    <script src="{% static 'lib/cdn/popper.min.js' %}"></script>
    <script src="{% static 'bootstrap/4.5.3/js/bootstrap.min.js' %}"></script>
    <link rel="stylesheet" href="{% static 'lib/cdn/font/node_modules/bootstrap-icons/font/bootstrap-icons.css' %}">
    
    {% block extra_head_add %}{% endblock %}
</head>
<body>
    <div class="d-flex">
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            {% include 'backend/base/navigation.twig' %}
        </nav>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
            {% block content %}{% endblock %}
        </main>
    </div>
    {% block extra_script_add %}{% endblock %}
</body>
</html>
