{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Project Management</title>
    <link rel="shortcut icon" href="{% static 'media/images/logo.png' %}" type="image/x-icon">
    <link href="{% static 'bootstrap/4.5.3/css/bootstrap.min.css' %}" rel="stylesheet">
    <link href="{% static 'css/dashboard.css' %}" rel="stylesheet">
    <script src="{% static 'jquery/3.5.1/jquery-slim.min.js' %}"></script>
    <script src="{% static 'bootstrap/4.5.3/js/bootstrap.min.js' %}"></script>
    <link rel="stylesheet" href="{% static 'lib/cdn/font/node_modules/bootstrap-icons/font/bootstrap-icons.css' %}">
    <link rel="stylesheet" type="text/css" href="{% static 'css/adduser.css' %}">
</head>
<body>
    <div class="d-flex">
        <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
            {% include 'navigation.twig' %}
        </nav>
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
            <div class="add-user-form">
                <div class="main">
                    <h2>Add User</h2>
                    <form action="{% url 'registeruser' %}" autocomplete="off" method="POST">
                        {% csrf_token %}

                        <label for="firstName">First Name:</label>
                        <input type="text" id="firstName" name="firstName" required/>

                        <label for="lastName">Last Name:</label>
                        <input type="text" id="lastName" name="lastName" required/>

                        <label for="empID">Employee ID:</label>
                        <input type="text" id="empID" name="empID" required/>

                        <label for="email">Email:</label>
                        <input type="text" id="email" name="email" required/>

                        <label for="roleID">Role:</label>
                        <select id="roleID" name="roleID" required>
                            <option value="" disabled selected>Select a role</option>
                            {% for role in roles %}
                                <option value="{{ role.id }}">{{ role.snippet }}</option>
                            {% endfor %}
                        </select>

                        <button type="submit">Submit</button>
                    </form>
                </div>
            </main>
        </div>
    </body>
</html>
